<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="10dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:paddingStart="10dp"
        android:id="@+id/comment_section_pic"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:layout_toEndOf="@id/comment_section_pic"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/comment_section_username"
        android:textSize="16sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="comment"
        android:textSize="16sp"
        android:layout_toEndOf="@id/comment_section_username"
        android:paddingStart="5dp"
        android:paddingTop="8dp"
        android:id="@+id/comment_section_comment"/>


</RelativeLayout>